header
  height: 100vh
  background-image: linear-gradient(to top, rgba(161, 140, 209, 0.4) 0%, rgba(251, 194, 235, 0.4) 100%), url(../assets/img/hero-image.jpg)
  background-repeat: no-repeat
  background-size: cover
  background-attachment: fixed
  background-position: center
  .hamburguer
    position: fixed
    top: 30px
    right 30px
    background: colorLight
  .menu-navegacion
    position: fixed
    top: 0
    right: 0
    width: 30vw
    height 100%
    background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex
    flex-direction: column
    justify-content: space-evenly
    align-items: center
    box-shadow: 0 0 6px rgba(0, 0, 0, .5)
    transition: transform .3s ease-in-out
    transform: translate(110%)
    a
      color: colorLight
      text-decoration: none
    .spread
      transform: translate(0)
  .head 
    padding: 0
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    color: colorLight
    .titulo
      font-size: 60px
      margin-bottom: 15px
    .copy
      font-weight: 300
      font-size: 25px


